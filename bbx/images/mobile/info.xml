<?xml version="1.0" encoding="utf-8" ?>
<theme>
	<name>信息发布型网站</name>
	<id>x</id>
	<version>2010-10-26</version>
	<info></info>
	<author>Jin</author>
	<defaultborder></defaultborder> <!-- 默认使用边框 -->
	<defaultborders>
		<block key="box_banner,box_logo,box_top_a,box_top_b,box_menu,box_bottom_a,box_bottom_b" value="" />
		<block key="box_slide_a" value="bx2.html" />
		<block key="box_slide_b,box_slide_c,box_slide_d" value="bx3.html" />
		<block key="box_slide_s_a,box_slide_s_b,box_slide_s_c,box_slide_s_d,box_slide_s_e,box_slide_s_f,box_slide_s_g" value="bbx1.html" />
		<block key="box_slide_s_b,box_slide_s_f" value="bx3.html" />
		
		<block key="box_slide_e,box_slide_f,box_slide_g,box_slide_h" value="bbx1.html" />
	</defaultborders>
	<borders>
		<set key="边栏1" tpl="bx1.html" />
		<set key="边栏2" tpl="bx2.html" />
		<set key="边栏3" tpl="bx3.html" />
		<set key="边栏4" tpl="bx4.html" />
		<set key="主区域边框" tpl="bbx1.html" />
		<set key="无标题边框" tpl="bbx2.html" />
	</borders>
	<modules>
		<product act="showstyle" key="仅文字" tpl="ps0.html" />
		<product act="showstyle" key="仅图片" tpl="ps1.html" />
		<product act="showstyle" key="图片+名称" tpl="ps2.html" />
		<product act="showstyle" key="图片+名称+价格" tpl="ps3.html" />
		<product act="showstyle" key="图片+名称+价格+购买" tpl="ps4.html" />
		<product act="showstyle" key="图片+名称+数量+价格+查看详细+加入购物车" tpl="ps5.html" />
