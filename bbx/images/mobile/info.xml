		<textimg key="图左文右" tpl="img_l.html" />
		<textimg key="图上文下" tpl="img_t.html" />
		<textimg key="图左浮动" tpl="img_fl.html" />
		<textimg key="图右浮动" tpl="img_fr.html" />
	</modules>
 	<styles>
		<style name="蓝色风格" value="blue13" author="Jin" />
